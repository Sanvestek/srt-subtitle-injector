{
  "manifest_version": 3,
  "name": "Simple Subtitle Injector",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png" 
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}